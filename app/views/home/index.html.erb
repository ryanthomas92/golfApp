<div class="parallax-container">
  <h1 class="center">Find Your Course</h1>
  <div class="parallax">
    <%= image_tag "driver.jpg" %>
  </div>
</div>

<div class="section white">
    <div class="row container">

      <div class="input-field col s12">
        <h3>Select a City:</h3>
        <select>
          <option value="" disabled selected>Choose your option</option>
          <% @cities_array.each do |city| %>
          <option value="1"><%= city %></option>
          <% end %>
        </select>
      </div>

      <form action="#">
        <h3>Select the Course Type:</h3>
        <p>
          <input type="checkbox" id="test1" />
          <label for="test1">Public</label>
        </p>
        <p>
          <input type="checkbox" id="test2" />
          <label for="test2">Private</label>
        </p>
        <p>
          <input type="checkbox" id="test3" />
          <label for="test3">Municipal</label>
        </p>
      </form>

    </div>
  </div>



  <div class="parallax-container">
    <div class="parallax">
      <%= image_tag "footer.jpg" %>
    </div>
  </div>
